<Window x:Class="MSweeper.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        
        Icon="..\Icons\menu.ico"
        
        ResizeMode="NoResize"
        WindowStyle="None"
        
        Title="MenuWindow" Height="100" Width="300">
    
    <Border BorderBrush="Black" BorderThickness="2">
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Margin="10 10 10 10" Click="NewGame">New Game</Button>
            <Button Grid.Column="1" Margin="10 10 10 10" Click="Quit">Quit</Button>
            <Button Grid.Column="2" Margin="10 10 10 10" Click="Cancel">Cancel</Button>
        </Grid>
    </Border>
    
</Window>
